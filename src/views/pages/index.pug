extends ../templates/template

block content
   main.main
      .shortener
         form.form#form(action="#")
            .form__input-container(data-error="Please add a link")
               input.form__input(
                     type="text",
                     name="url",
                     placeholder="Shorten a link here...",
                     aria-label="Type a url"
                  )
            button.form__submit Shorten It!
         img.spinner#spinner(src="assets/img/spinner.svg", alt="Loading spinner")
         .links#links-container
         
      article.statistics
         h2.statistics__title Advanced Statistics
         p.statistics__text ack how your links are performing across the web with our advanced statistics dashboard.

         .statistics__cards
            article.statistics-card.statistics-card--brand
               h3.statistics-card__title Brand Recognition
               p.statistics-card__text Boost your brand recognition with each click. Generic links donâ€™t mean a thing. Branded links help instil confidence in your content.
                  
            article.statistics-card.statistics-card--detailed
               h3.statistics-card__title Detailed Records
               p.statistics-card__text Gain insights into who is clicking your links. Knowing when and where people engage with your content helps inform better decisions.

            article.statistics-card.statistics-card--customizable
               h3.statistics-card__title Fully Customizable
               p.statistics-card__text Improve brand awareness and content discoverability through customizable links, supercharging audience engagement.
         
      article.get-started
         h2.get-started__title Boost your links today
         a.get-started__link(href="#") Get Started

   template#template-link
      .shortened
         a.shortened__link 
         a.shortened__shortened-link
         button.shortened__copy Copy